<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplicacionNarutoFinal"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.CustomProgressDialog"
            android:exported="true" />
        <activity
            android:name=".ui.CharacterDetailsActivity"
            android:exported="false" /> <!-- Actividad Splash -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">

            <!-- Definir como actividad de inicio -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Actividad LoginActivity -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true" /> <!-- Actividad com.example.aplicacionnarutofinal.ui.MainActivity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />

    </application>


</manifest>